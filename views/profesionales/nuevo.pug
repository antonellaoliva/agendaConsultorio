extends ../layout.pug

block content
    .container.d-flex.justify-content-center.align-items-center(style="min-height: 100vh;")
        .col-md-8.col-lg-6
            .card.shadow-sm
                .card-header.bg-success.text-white.text-center
                    h1 Nuevo Médico

                .card-body
                    form(action="/profesionales" method="post")
                        div#especialidades-container
                            .especialidad-item.mb-3
                                label(for="nombre") Nombre:
                                input(type="text" name="nombre" placeholder="Ingrese nombre" class="form-control")

                                label(for="apellido" class="mt-3") Apellido:
                                input(type="text" name="apellido" placeholder="Ingrese apellido" class="form-control")

                                label(for="especialidades" class="mt-3") Especialidad:
                                select(name="especialidades[]" class="form-select")
                                    option(value="") Seleccionar Especialidad
                                    option(value="1") Cardiología
                                    option(value="2") Dermatología
                                    option(value="3") Pediatría 
                                    option(value="4") Fonoaudiología 
                                    option(value="5") Ginecología 
                                    option(value="6") Oftalmología 
                                    option(value="7") Cirugía General 
                                    option(value="8") Médico General 
                                    option(value="9") Neurología 
                                    option(value="10") Otorrinolaringología   

                                label(for="matricula" class="mt-3") Matrícula:
                                input(type="text" name="matriculas[]" placeholder="Ingrese matrícula" class="form-control")

                        .text-center.mt-4
                            button(type="button" onclick="agregarEspecialidad()" class="btn btn-outline-success me-2") Agregar otra especialidad
                            button(type="submit" class="btn btn-success") Guardar

    
    script.
        function agregarEspecialidad() {
            const container = document.getElementById('especialidades-container');
            const especialidadItem = document.createElement('div');
            especialidadItem.className = 'especialidad-item mb-3';

            especialidadItem.innerHTML = `
                <label for="especialidades" class="mt-3">Especialidad:</label>
                <select name="especialidades[]" class="form-select">
                    <option value="">Seleccionar Especialidad</option>
                    <option value="1">Cardiología</option>
                    <option value="2">Dermatología</option>
                    <option value="3">Pediatría</option>
                    <option value="4">Fonoaudiología</option>
                    <option value="5">Ginecología</option>
                    <option value="6">Oftalmología</option>
                    <option value="7">Cirugía General</option>
                    <option value="8">Médico General</option>
                    <option value="9">Neurología</option>
                    <option value="10">Otorrinolaringología</option>
                </select>

                <label for="matricula" class="mt-3">Matrícula:</label>
                <input type="text" name="matriculas[]" placeholder="Ingrese matrícula" class="form-control mt-2">
            `;

            container.appendChild(especialidadItem);
        }



                 
